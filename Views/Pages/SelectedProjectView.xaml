<UserControl
    x:Class="test2.Views.Pages.SelectedProjectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:components="clr-namespace:MainComponents.Components;assembly=MainComponents"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:test2.ViewModels.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Name="ProjectPage"
    d:DataContext="{d:DesignInstance pages:SelectedProjectPageViewModel}"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    mc:Ignorable="d">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid Margin="80,57,80,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource TitleText}"
            Text="{Binding SelectedCard.Title}" />
        <Image
            Grid.Row="0"
            Width="424"
            Height="139"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Source="/Resources/Images/logo.png" />
        <Button
            Grid.Row="0"
            Margin="0,20.1,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{StaticResource Back}"
            Style="{StaticResource BackBtnStyle}" 
            Command="{Binding ProjectViewNavigateCommand}"/>
        <Image
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            Margin="-80"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Source="/Resources/Images/bg selectedProj.png" />

        <Grid Height="781" Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="823" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ScrollViewer
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="54,64,50,64"
                >
                <TextBlock
                    Style="{StaticResource BaseTextStyle}"
                    Text="{Binding SelectedCard.Description}"></TextBlock>
            </ScrollViewer>



            <Border
                Height="463.82"
                Margin="50,64,0,54"
                CornerRadius="16">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding SelectedCard.ImageSource}"/>
                </Border.Background>
            </Border>

            <Button
                Grid.Row="1"
                Height="120"
                Margin="50,0,0,64"
                Content="{StaticResource Donate}"
                Style="{StaticResource RedButtonStyle}"
                />

        </Grid>

    </Grid>
</UserControl>
