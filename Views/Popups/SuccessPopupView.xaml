<UserControl
    x:Class="test2.Views.Popups.SuccessPopupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:test2.Views.Popups"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="729"
    d:DesignWidth="920"
    mc:Ignorable="d">
    <Grid Width="920" Height="729">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image
                Width="175"
                Height="175"
                Source="/Resources/Images/PopupSuccess.png" />
            <TextBlock
                Width="574"
                Margin="0,64,0,24"
                Style="{StaticResource TitleText}"
                Text="{StaticResource PopupSuccess_title}" />
            <TextBlock
                Width="407"
                FontSize="30"
                Style="{StaticResource CenterTextStyle}"
                Text="{StaticResource PopupSuccess_text}" />
            <Button
                Width="762"
                Height="120"
                Margin="0,64,0,0"
                Background="#51D169"
                Command="{Binding closePopupCommand}"
                Content="{StaticResource Close}"
                Style="{StaticResource RedButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
