<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Height" Value="107" />
        <Setter Property="Width" Value="803" />
        <Setter Property="FontSize" Value="35" />
        <Setter Property="FontFamily" Value="{StaticResource TextFont}" />
        <Setter Property="Foreground" Value="{StaticResource BlackBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border
                        Name="Border"
                        Padding="32"
                        Background="White"
                        BorderBrush="{StaticResource GreyBrush}"
                        BorderThickness="1"
                        CornerRadius="20">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost" />
                            <TextBlock
                                x:Name="HintText"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource GreyBrush}"
                                IsHitTestVisible="False"
                                Text="Своя сумма"
                                Visibility="Collapsed" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource BlackBrush}" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource BlackBrush}" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Text" Value="" />
                                <Condition Property="IsKeyboardFocused" Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="HintText" Property="Visibility" Value="Visible" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="ComboBox" TargetType="ComboBox">
        <Setter Property="Height" Value="107" />
        <Setter Property="Width" Value="803" />
        <Setter Property="FontSize" Value="35" />
        <Setter Property="FontFamily" Value="{StaticResource TextFont}" />
        <Setter Property="Foreground" Value="{StaticResource BlackBrush}" />
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="{StaticResource GreyBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="32,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Border
                        x:Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="20">
                        <Grid>
                            <TextBlock
                                Margin="0"
                                Padding="32"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{Binding SelectedItem.Title, RelativeSource={RelativeSource TemplatedParent}}" />
                            <ToggleButton
                                x:Name="PART_Button"
                                Height="64"
                                Margin="0,0,32,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Focusable="False"
                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="OverridesDefaultStyle" Value="True" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <ContentPresenter
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        RecognizesAccessKey="True" />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                                <Path
                                    x:Name="ArrowPath"
                                    Data="M15 10.5L0.27757 0L29.7224 0L15 10.5Z"
                                    Fill="{StaticResource GreyBrush}"
                                    StrokeThickness="3" />
                            </ToggleButton>

                            <Popup
                                x:Name="PART_Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                Placement="Bottom"
                                PopupAnimation="Slide"
                                VerticalOffset="10">
                                <Border
                                    Width="803"
                                    MaxHeight="510"
                                    Padding="32"
                                    Background="White"
                                    BorderBrush="{StaticResource GreyBrush}"
                                    BorderThickness="1"
                                    CornerRadius="20">
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger SourceName="PART_Button" Property="IsChecked" Value="True">
                            <Setter TargetName="ArrowPath" Property="Data" Value="M15.5 0.500001L0.77757 11L30.2224 11L15.5 0.500001Z" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PopupStyle" TargetType="Border">
        <Setter Property="Background" Value="#FAFAFA" />
        <Setter Property="CornerRadius" Value="30" />

    </Style>



</ResourceDictionary>